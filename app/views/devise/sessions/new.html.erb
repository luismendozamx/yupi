<section id="login-header">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <p>Ahora puedes pagar los que mas te gusta<br> sin tener una cuenta de banco</p>
      </div>
    </div>
  </div>
</section>
<div id="sign-in-container" class="container">
  <br>
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h2 class="text-center">Ingresa a tu cuenta</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true, label: "Email" %>
          <%= f.input :password, required: false, label: "ContraseÃ±a" %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Ingresa", class: "btn-success btn-fill" %>
        </div>
      <% end %>
      <hr>
      <p class="text-center"><%= render "devise/shared/links" %></p>
    </div>
  </div>
</div>
