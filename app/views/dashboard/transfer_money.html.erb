<section id="pay-header">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <h2 class="text-center">Realizar Transferencia</h2>
        <hr>
        <%= simple_form_for @transfer, url: transfers_send_money_path do |f| %>
          <%= f.input :email, placeholder: "Email", label: false %>
          <%= f.input :amount, placeholder: "Monto", label: false %>
          <%= f.button :submit, "Enviar", class: "btn-success btn-fill" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
